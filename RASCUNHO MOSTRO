#include <cmath>
#include <vector>
#include <iostream>
using namespace std;
    // a
    void DevolveVector (int &n, vector <float> &A) //o funcionario determina o tamanho do vetor e o preench; procetimento que retorna A
    
    {
        cout << "Entre com um numero: "; // esse numero deterina o tamanho do vetor
        cin >> n;
        A.resize(n);
        for (int i = 0; i < n; i++)
        {
            cout << "A(" << i << "): ";
            cin >> A[i];
        }
        
    }
    // b
    void LeVetor(vector<float> A , int n)
    {
    
        DevolveVector(n, A);
        for(int i = 0; i <A.size(); i++)
        {
            cout << A[i]<< endl;
        }
    }
   
int main()
{
  // c  
  vector <float>A, B, C;
  int nA = 3, nB = 2, nC = 4;
  
  LeVetor(A, nA);
  LeVetor(B, nB);
  LeVetor(C, nC);
  
    return 0;
}
