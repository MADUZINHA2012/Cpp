#include <vector>
#include <cmath>
#include <iostream>
using namespace std; 
//a
void LeComplexo (float &parteReal, float &parteComplexo)
{
    cout << "Digite a e b, respectivamente: ";
    cin >> parteReal >> parteComplexo;
}
void ImprimeComplexo(float parteReal, float parteComplexo)
{
    cout << endl << parteReal << " + "<< parteComplexo <<"i";
}
void somaComplexo(float a1, float a2, float b1, float b2, float &somaReal, float &somaImag)
{
   
   somaReal = a1 + a2;
   somaImag = b1 + b2;
   ///cout << somaReal << " + "<< somaImag << "i"<< endl;
}

void MultiplicaComplexo(float a1, float b1, float a2, float b2, float &mult1, float &mult2, float &mult3, float &mult4)
{
    mult1 = a1 * a2;
    mult2 = a1* b2;
    mult3 = a2 * b1;
    mult4 = -(b1 * b2);
    
    cout <<endl << mult1 << " + " << mult2<<"i" <<" + " << mult3<< "i" << " + "<< mult4;
    
}

int mai
    float cr, ci, dr, di, er, ei, fr, fi, somaCDr, somaCDi, somaEFr, somaEFi, m1, m2, m3, m4, ef1, ef2, ef3, ef4;
    
    LeComplexo(cr, ci);
    LeComplexo(dr, di);
    LeComplexo(er, ei);
    LeComplexo(fr,fi);
    somaComplexo(cr, dr, ci, di, somaCDr, somaCDi);
    somaComplexo(er, fr, ei, fi, somaEFr, somaEFi);
    MultiplicaComplexo(somaCDr, somaCDi,somaEFr, somaEFi, m1, m2, m3, m4);
 
    return 0;
}
