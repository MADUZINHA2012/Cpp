#include <cmath>
#include <vector>
#include <iostream>
using namespace std;

 int fatorial(int n)
 { 
    int fat = 1;
    for (int i = 1; i <= n; i++)
    {
        fat *= i;
    }
    
    return fat;
 }
double FuncaoCos(double x, int n)
{
    double Coss = 0;
    
    int sinal = 1;
    for (int i = 0; i <= n; i++)
    {
        Coss += ((pow (x, 2*i) / fatorial(2*i))* sinal);
        sinal *= -1;
    }
    return Coss;
}    
int main()
{
   int numb = 0;
   double a = 0;
   
   cout << "Declare o numero de termos: ";
   cin >> numb;
   
   cout << "Declare o valor da variavel da funcao: ";
   cin >> a;
   
   double resultado = FuncaoCos(a, numb);
   cout << "O resultado da sua operacao eh: "<< resultado;
   

    return 0;
