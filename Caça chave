#include  <vector>
#include <cmath>
#include <iostream>
#include <string>
using namespace std;
void verificacao(vector<float> A, float k)
{
    float a;
    
    for (int i = 0; i < 4; i++)
    {
        cout << "Declare o elementos do vetor a" << i<< ": ";
        cin >> a;
        A.push_back(a);
    }
    
    cout << "Declare uma chave: ";
    cin >> k;
    vector <float> M; 
    for(int i = 0; i < 120; i++)
    {
        if(A[i] == k)
        {
            M.push_back(i);
        }
    }
    if(M.size() >= 0)
    {
        for(int i = 0; i < M.size(); i++)
        {
            cout << "\n A chave "<< k <<" esta na posicao "<< M[i]<< " do seu vetor.";
        }
    }
    else 
    {
        cout << "Nao ha nenhum elemento igual a "<< k; 
    }
}
int main()
{
    float k = 0;
    vector <float> V;
    verificacao(V, k);

    return 0;
}
